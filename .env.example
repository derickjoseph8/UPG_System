# UPG System Environment Configuration
# Copy this file to .env and update with your values

# Security - REQUIRED: Generate a new secret key for production
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Debug mode - Set to False in production
DEBUG=True

# Allowed hosts - comma separated
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=upg_management_system
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# KoboToolbox Integration
KOBO_API_URL=https://kf.kobotoolbox.org/api/v2
KOBO_API_TOKEN=your-kobo-api-token
KOBO_BASE_URL=https://kf.kobotoolbox.org
KOBO_WEBHOOK_SECRET=your-webhook-secret-for-signature-validation

# Email Configuration (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

